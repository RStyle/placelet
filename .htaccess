#### Rule for Error Page - 404 ####
####ErrorDocument 404 http://rstyle.mania-server.net/jp/404.php


# Enable Rewrite Engine
RewriteEngine on
RewriteBase /

#Create friendly URL
RewriteRule ^site$ site.php [R]

RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*)$ $1.php

DirectoryIndex home.php index.php index.html

AddType 'text/html; charset=UTF-8' html

#Umleitung der www subdomain auf Hauptseite
#RewriteCond %{HTTP_HOST} ^www\.placelet\.net$ [NC]
#RewriteRule ^(.*)$ http://placelet.net/$1 [L,R=301]

RewriteCond %{HTTP_HOST} ^www\.placelet\.det$ [NC] [R]
RewriteRule ^(.*)$ http://placelet.de/$1 [L,R=301] [R]